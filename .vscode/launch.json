    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Samples",
            "program": "${workspaceFolder}/examples/client.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "-r",
                "ts-node/register",
                "-t",
                "999999",
                "--colors",
                "${workspaceFolder}/test/reconnect.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DEBUG": "rhea*"
            }
        }
    ]
}